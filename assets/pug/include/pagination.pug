|{% if paginator.total_pages > 1 %}
.pagination
  |{% if paginator.previous_page %}
  a(href='{{ paginator.previous_page_path }}').previous &laquo; Previous
  |{% else %}
  span.previous Previous
  |{% endif %}
  span.page_number Page: {{ paginator.page }} of {{ paginator.total_pages }}
  |{% if paginator.next_page %}
  a(href='{{ paginator.next_page_path }}').next Next
  |{% else %}
  span.previous Next &raquo;
  |{% endif %}
|{% endif %}